            fx:controller="main.airapp.AirplanesPageFormController">
    <children>
        <Label layoutX="58.0" layoutY="77.0" prefHeight="37.0" prefWidth="48.0" text="Name:">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <Label layoutX="58.0" layoutY="192.0" prefHeight="31.0" prefWidth="70.0" text="No of Seats:">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <Label layoutX="58.0" layoutY="140.0" prefHeight="31.0" prefWidth="59.0" text="Code:">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <TextField fx:id="AirplaneNameTextField" layoutX="106.0" layoutY="83.0" prefHeight="25.0" prefWidth="207.0"/>
        <TextField fx:id="AirplaneCodeTextField" layoutX="106.0" layoutY="143.0"/>
        <TextField fx:id="NoOfSeatsTextField" layoutX="135.0" layoutY="195.0" prefHeight="25.0" prefWidth="59.0"/>
