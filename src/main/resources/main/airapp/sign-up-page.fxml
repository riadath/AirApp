<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="backgroundColor" stylesheets="@signupStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.airapp.SignupPageController">
    <children>
        <VBox layoutX="255.0" layoutY="116.0" prefHeight="307.0" prefWidth="291.0" spacing="22.0">
            <children>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="100.0" text="Name:" />
                        <TextField prefHeight="25.0" prefWidth="250.0" promptText="Name" />
                    </children>
                </HBox>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="100.0" text="Email" />
                        <TextField prefHeight="25.0" prefWidth="250.0" promptText="Email" />
                    </children>
                </HBox>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="35.0" prefWidth="89.0" text="Country of Residence" wrapText="true" />
                        <TextField prefHeight="25.0" prefWidth="237.0" promptText="Country of Residence" />
                    </children>
                </HBox>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="35.0" prefWidth="80.0" text="Passport No:" wrapText="true" />
                        <TextField prefHeight="25.0" prefWidth="229.0" promptText="Passport No:" />
                    </children>
                </HBox>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="100.0" text="Password" />
                        <TextField prefHeight="25.0" prefWidth="246.0" promptText="Password" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label prefHeight="43.0" prefWidth="79.0" text="Confirm Password" wrapText="true" />
                        <TextField prefHeight="25.0" prefWidth="209.0" promptText="Confirm Password" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox layoutX="560.0" layoutY="518.0" prefHeight="68.0" prefWidth="178.0" spacing="60.0">
            <children>
                <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="65.0" text="Confirm" />
                <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="65.0" text="Cancel" />
            </children>
        </HBox>
      <Button fx:id="exitFromSignupButton" layoutX="734.0" layoutY="14.0" mnemonicParsing="false" onAction="#switchToLoginMenu" text="Exit" />
    </children>
</AnchorPane>
