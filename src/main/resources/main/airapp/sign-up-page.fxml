<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="backgroundColor" stylesheets="@signupStyle.css"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.airapp.SignupPageController">
    <children>
        <VBox layoutX="255.0" layoutY="116.0" prefHeight="307.0" prefWidth="291.0" spacing="22.0">
            <children>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="100.0" text="Name:" textFill="WHITE"/>
                        <TextField fx:id="nameTextField" prefHeight="25.0" prefWidth="250.0" promptText="Name"/>
                    </children>
                </HBox>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="100.0" text="Email" textFill="WHITE"/>
                        <TextField fx:id="emailTextField" prefHeight="25.0" prefWidth="250.0" promptText="Email"/>
                    </children>
                </HBox>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="35.0" prefWidth="89.0" text="Country of Residence" textFill="WHITE"
                               wrapText="true"/>
                        <TextField fx:id="countryTextField" prefHeight="25.0" prefWidth="237.0"
                                   promptText="Country of Residence"/>
                    </children>
                </HBox>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="35.0" prefWidth="80.0" text="Passport No:" textFill="WHITE" wrapText="true"/>
                        <TextField fx:id="passportTextField" prefHeight="25.0" prefWidth="229.0"
                                   promptText="Passport No:"/>
                    </children>
                </HBox>
                <HBox spacing="17.0">
                    <children>
                        <Label prefHeight="17.0" prefWidth="100.0" text="Password" textFill="WHITE"/>
                        <PasswordField fx:id="passwordTextField" prefHeight="25.0" prefWidth="251.0"
                                       promptText="Password"/>
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Label prefHeight="43.0" prefWidth="79.0" text="Confirm Password" textFill="WHITE"
                               wrapText="true"/>
                        <PasswordField fx:id="confirmPassTextField" prefHeight="25.0" prefWidth="211.0"
                                       promptText="Confirm Password"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox layoutX="560.0" layoutY="518.0" prefHeight="68.0" prefWidth="178.0" spacing="60.0">
            <children>
                <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#validateUserData" prefHeight="25.0"
                        prefWidth="65.0" text="Confirm"/>
                <Button fx:id="exitFromSignupButton" mnemonicParsing="false" onAction="#switchToLoginMenu"
                        prefHeight="25.0" prefWidth="65.0" text="Cancel"/>
            </children>
        </HBox>
        <Label fx:id="signupWarningLabel" layoutX="70.0" layoutY="16.0" prefHeight="76.0" prefWidth="678.0"
               textFill="RED" wrapText="true">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
