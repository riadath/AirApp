<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.airapp.CheckinPageController">
    <children>
        <Button fx:id="exitButton" layoutX="534.0" layoutY="361.0" mnemonicParsing="false" onAction="#switchToAdminPage" text="Exit" />
      <TextField fx:id="nameTextField" layoutX="97.0" layoutY="84.0" promptText="Name" />
      <TextField fx:id="passportTextField" layoutX="366.0" layoutY="84.0" promptText="Passport No" />
      <TextField fx:id="luggageTextField" layoutX="97.0" layoutY="180.0" promptText="Number of Luggages" />
      <Label layoutX="48.0" layoutY="87.0" text="Name:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="275.0" layoutY="87.0" text="Passport No:">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Label layoutX="22.0" layoutY="171.0" prefHeight="42.0" prefWidth="109.0" text="Luggages:" wrapText="true">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <Button fx:id="checkInButton" layoutX="109.0" layoutY="260.0" mnemonicParsing="false" onAction="#checkIn" prefHeight="42.0" prefWidth="93.0" text="Check In" textFill="#15861d">
         <font>
            <Font name="Consolas Bold" size="14.0" />
         </font>
      </Button>
      <Label fx:id="errorLabel" layoutX="48.0" layoutY="23.0" prefHeight="42.0" prefWidth="228.0">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
